# General Snippets #
####################

snippet nf "New Golang file" b
package main

import (
    "fmt"
)

func main() {
	${1:fmt.Println("${2:Hello World}")}$0
}
endsnippet


snippet i "Import Statement" b
import (
	${0:"fmt"}
)
endsnippet


